<%= form_for(@entry.comments.build) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
	<%= hidden_field_tag :entry_id, @entry.id %>
	<div class="field">
		<%= f.text_area :content, placeholder: "Compose new comment..." %>
	</div>
	<%= f.submit "Post", class: "btn btn-success" %>
<% end %>