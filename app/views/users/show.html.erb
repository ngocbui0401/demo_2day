<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info entry_form">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name.upcase %>
      </h1>
      <%= render 'shared/stats'%>
    </section>
  </aside>
  <div class="col-md-8">
    <div class="row">
      <%= render 'follow_form' if logged_in? %>
    </div>
  </div>
  <div class="col-md-8 entry-feed">
    
    <% if @user.entries.any? %>
      <h3>Entries (<%= @user.entries.count %>)</h3>
      <ol class="entries">
        <%= render @entries %>
      </ol>
      <%= will_paginate @entries %>
    <% end %>
  </div>
</div>