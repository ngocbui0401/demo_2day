<% if logged_in? %>
	<div class="row">
		<aside class="col-md-4">
			<div class="user_stats">
				<section class="user_info">
					<%= render 'shared/user_info' %>
				</section>
			</div>
			<section class="entry_form">
				<%= render 'shared/entry_form' %>
			</section>
		</aside>
		<div class="col-md-8 entry-feed">
			<h3>Entry Feed</h3>
			<%= render 'shared/feed'%>
		</div>
	</div>
<% else %>
<div class="row">
	<div class="center homepage-bg col-md-12">
		<h1>Welcome to the NgocNep App</h1>
		<h2>
		This is the home page for the blog app
		</h2>
		<%= link_to "Sign up now!", signup_path , class: "btn btn-lg btn-success" %>
	</div>
</div>
<% end %>